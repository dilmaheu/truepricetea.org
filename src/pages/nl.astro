---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import Hero from "../components/Hero.astro";
import Conclusions from "../components/Conclusions.astro";
import Tables from "../components/Tables.astro";
import Graph from "../components/Graph.astro";
import TeaCup from "../components/TeaCup.svelte";
import Circles from "../components/Circles.astro";

import {
  getSiteMetatags,
  getSiteContent,
  Content,
  Metatags,
} from "../utils/api";

const metatags: Metatags = await getSiteMetatags("nl");
const content: Content = await getSiteContent("nl");
---

<DefaultLayout metatags={metatags} content={content}>
  <Hero content={content} />
  <Conclusions content={content} />
  <Tables content={content} />
  <Graph content={content} />
  <TeaCup client:load content={content} />
  <Circles content={content} />
</DefaultLayout>
