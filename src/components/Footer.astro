---
import truepriceLogo from "../assets/img/True-Price-Logo-2020.png";
import hasLogo from "../assets/img/has-logo.svg";
import dilmahLogo from "../assets/img/Dilmah-Logo.svg";
---

<footer>
  <section class="color-neutral">
    <div class="container align-center padding-32">
      <div class="logos">
        <img class="logo trueprice" src={truepriceLogo} alt="Trueprice logo" />
        <img class="logo has" src={hasLogo} alt="HAS logo" />
        <img class="logo dilmah" src={dilmahLogo} alt="Dilmah logo" />
      </div>
    </div>
    <p class="align-horizontal text-al padding-8">
      Conclusions TCA Ceylon Tea by HAS - January 2022
    </p>
  </section>
</footer>

<style>
  .logos {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .logo {
    max-width: 300px;
    max-height: 100px;
    margin: 0 30px;
  }

  @media only screen and (max-width: 768px) {
    .logos {
      flex-direction: column;
    }

    .trueprice,
    .has {
      margin: 0 0 30px 0;
    }
  }
</style>
